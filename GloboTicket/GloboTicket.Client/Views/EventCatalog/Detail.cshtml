@model GloboTicket.Client.Models.Api.Event
<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" alt="Artist pic" />
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col">
                <h2>@Model.Artist - @Model.Name</h2>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <h4>@Model.Date.ToShortDateString()</h4>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                @Model.Description
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                Category: @Model.CategoryName
            </div>
            <div class="col">
                Price: $@Model.Price
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col offset-4">
        <form class="form" asp-action="AddLine" asp-controller="ShoppingBasket">
            <div class="row">
                <div class="col-md-3">
                    <label>Enter number of tickets:</label>
                </div>
                <div class="col-md-3">
                    <input name="numberOfTickets" class="form-control" type="number" value="2" />
                </div>
                <div class="col-md-2">
                    <input name="eventId" type="hidden" value="@Model.EventId" />
                    <button type="submit" class="btn btn-primary">Order</button>
                </div>
            </div>
          
        </form>
    </div>
</div>
